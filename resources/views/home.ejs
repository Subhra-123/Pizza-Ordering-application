
    <section class="hero py-16" >
        <div class="container mx-auto flex items-center justify-between" ; style="align-items: center;">
            <div class="w-1/2">
                <h6 class="text-lg"><em>Are you hungry??</em></h6>
                <h1 class="text-6xl font-bold">Don't Wait!</h1>
                <p class="text-2xl font-bold">
                    Best pizza availaible to satisfy your cravings
                </p>
                <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button>
            </div>
            <div class="w-1/2" >
                <img src="/img/hero-pizza.png" alt="" style="margin-top: 41px;">
            </div>
        </div>
    </section>
    <section class="menu container mx-auto py-8">
        <h1 class="txt-xl font-bold mb-8">All Pizzas</h1>
        <div class="grid grid-cols-4 col-gap-20 row-gap-16" style="display: flex; flex-wrap: wrap;">

            <% pizzas.forEach(function(pizza){%>
                <div class="w-64">
                    <img class="h-40 mb-4 mx-auto" src="/img/<%=pizza.image%>" alt="">
                    <div class="text-center">
                        <h2 class="mb-4 text-lg"><%=pizza.name%></h2>
                        <span class=" size py-1 px-4 rounded-full uppercase text-xs"><%=pizza.size%></span>
    
                        <div class="flex items-center justify-around mt-6">
                            <span class="font-bold text-lg">₹<%=pizza.price%></span>
                            <button data-pizza="<%=JSON.stringify(pizza)%>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                                <span>+</span>
                                <span class="ml-4">Add</span>
                            </button>
                        </div>
                    </div>
                </div>
           <% })%>

        </div>
            
           
        </div>
        <!-- <button id="scrollTopBtn" title="Scroll to Top" type="button"  style="display: inline-block;">▲</button> -->
    </section>
